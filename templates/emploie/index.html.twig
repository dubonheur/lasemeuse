<div class="wrapper">
    {% include "menu/nav_footer/nav.html.twig" %}


    <main class="content">
        

		<div class="container-fluid p-0">

			<h1 class="h3 mb-3"><strong>Liste </strong>des emploies du temps</h1>
		
			<div class="row">
		
				<div class="card">
					<div class="card-body">
		
                        <a href="{{path('emploie_add')}}"><img src="{{ asset('assets/img/icons/ajouter.png') }}"></a></br></br>

                        <table class="table table-hover table-striped">
                          <thead>
                              <tr>
                                  <th>ID</th>
                                  <th>Classe</th>
                                  <th>Année scolaire</th>
                                  <th>Période</th>
                                  <th>Date du jour</th>
                                  <th>Heure de début</th>
                                  <th>Heure de fin</th>
                                  <th>Informations</th>
                                  <th>Actions</th>
                              </tr>
                          </thead>
                          <tbody>
                              {% for emploie in emploies %}
                                  <tr>
                                      <td>{{ emploie.id }}</td>
                                      <td>{{ emploie.classe.nomClasse }}</td>
                                      <td>{{ emploie.annee.debutan |date("m/d/Y")}}/{{ emploie.annee.finan|date("m/d/Y") }}</td>
                                      <td>{{ emploie.periode.libelle }}</td>
                                      <td>{{ emploie.datejour|date("m/d/Y") }}</td>
                                      <td>{{ emploie.heuredebut|date("H:i") }}</td>
                                      <td>{{ emploie.heureFin|date("H:i")}}</td> 
                                      <td>{{ emploie.info }}</td> 
                                      <td>
                                        <a href="{{ path('emploie_show', {'id': emploie.id}) }}"><img src="{{ asset('assets/img/icons/voir.png') }}"></a>
                                          <a href="{{ path('emploie_edit', {'id': emploie.id}) }}"><img src="{{asset('assets/img/icons/modifier.png')}}"></a>
                                          <a href="{{ path('emploie_supprimer', {'id': emploie.id}) }}"><img src="{{asset('assets/img/icons/supprimer.png')}}"></a>
                                      </td>
                                  </tr>
                              {% endfor %}
                          </tbody>
                      </table>


					</div>
				</div>
		
			</div>
		
		</div>

        
