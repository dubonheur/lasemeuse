<div class="wrapper">
    {% include "menu/nav_footer/nav.html.twig" %}


    <main class="content">
        
		<div class="container-fluid p-0">

			<h1 class="h3 mb-3"><strong>Listes </strong> des événements</h1>
		
			<div class="row">
		
				<div class="card">
					<div class="card-body">
						
						<a href="{{ path('evenement_add') }}"  ><img src="{{ asset('assets/img/icons/ajouter.png') }}"></a></br></br>

                        {% block body %}
                        <table class="table table-hover tpedable-stri">
                          <thead>
                            <tr>
                              <th>Titre</th>
                              <th>Date</th>
                              <th>Description</th>
                              <th>Actions</th>
                            </tr>
                          </thead>
                          <tbody>
                            {% for evenement in evenements %}
                              <tr>
                                <td>{{ evenement.titre }}</td>
                                <td>{{ evenement.date|date('d/m/Y') }}</td>
                                <td>{{ evenement.description }}</td>
                                <td>
                                  <a href="{{ path('evenement_show', {'id': evenement.id}) }}" ><img src="{{ asset('assets/img/icons/voir.png') }}"></a>
                                  <a href="{{ path('evenement_edit', {'id': evenement.id}) }}" ><img src="{{ asset('assets/img/icons/modifier.png') }}"></a>
                                  <a href="{{ path('evenement_supprimer', {'id': evenement.id}) }}"><img src="{{ asset('assets/img/icons/supprimer.png') }}"></a>
                                </td>
                              </tr>
                            {% else %}
                              <tr>
                                <td colspan="4">Aucun événement trouvé.</td>
                              </tr>
                            {% endfor %}
                          </tbody>
                        </table>
                      {% endblock %}
						
						
					</div>
				</div>
			</div>
		
		</div>
        
    </main>
