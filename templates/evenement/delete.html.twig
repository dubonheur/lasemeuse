{% extends 'manu/base.html.twig' %}

{% block title %}Supprimer un evenement{% endblock %}

{% block body %}
    <h1>Supprimer un evenement</h1>
    <p>Voulez-vous vraiment supprimer cette evenement ?</p>
    <p>{{ evenement }}</p>

    <form action="{{ path('evenement_supprimer', { 'id': evenement.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
        <button type="submit" class="btn btn-danger">Supprimer</button>
    </form>

{% endblock %}