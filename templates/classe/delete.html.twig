{% extends 'menu/base.html.twig' %}

{% block title %}Supprimer un année{% endblock %}

{% block body %}
    <h1>Supprimer un annee</h1>
    <p>Voulez-vous vraiment supprimer cette année ?</p>
    <p>{{ année }}</p>

    <form action="{{ path('annee_supprimer', { 'id': annee.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annee.id) }}">
        <button type="submit" class="btn btn-danger">Supprimer</button>
    </form>

{% endblock %}