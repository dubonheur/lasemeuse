{% extends 'manu/base.html.twig' %}

{% block title %}Supprimer une garder{% endblock %}

{% block body %}
    <h1>Supprimer un garder</h1>
    <p>Voulez-vous vraiment supprimer cette garde ?</p>
    <p>{{ garder }}</p>

    <form action="{{ path('garder_supprimer', { 'id': garde.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ garde.id) }}">
        <button type="submit" class="btn btn-danger">Supprimer</button>
    </form>

{% endblock %}