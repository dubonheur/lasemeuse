{% block body %}
    <h1>Supprimer un Eleve</h1>
    <p>Voulez-vous vraiment supprimer cette utilisateur ?</p>
    <p>{{ eleve }}</p>

    <form action="{{ path('eleve_supprimer', { 'id': eleve.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE">
