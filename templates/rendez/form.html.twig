{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

<div class="form-group">
  {{ form_label(form.date, 'Date', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
  <div class="col-sm-10">
    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.date) }}
  </div>
</div>

<div class="form-group">
  {{ form_label(form.heure, 'Heure', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
  <div class="col-sm-10">
    {{ form_widget(form.heure, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.heure) }}
  </div>
</div>

<div class="form-group">
  {{ form_label(form.parent, 'Parent', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
  <div class="col-sm-10">
    {{ form_widget(form.parent, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.parent) }}
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <button type="submit" style="background-color: #9933cc">{{ button_label|default('Ajouter') }}</button>
  </div>
</div>

{{ form_end(form) }}